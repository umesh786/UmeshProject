<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.example.acespritech_umesh.umeshproject.customfonts.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:text="ID"
            android:textSize="18dp" />

        <com.example.acespritech_umesh.umeshproject.customfonts.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="Name"
            android:textSize="18dp" />

        <com.example.acespritech_umesh.umeshproject.customfonts.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="designation"
            android:textSize="18dp" />

        <com.example.acespritech_umesh.umeshproject.customfonts.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="Salary"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.example.acespritech_umesh.umeshproject.customfonts.MyTextView
            android:id="@+id/detailid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:text="ID"
            android:textAlignment="center"
            android:textSize="18dp" />

        <com.example.acespritech_umesh.umeshproject.customfonts.MyTextView
            android:id="@+id/detailname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="Name"
            android:textAlignment="center"
            android:textSize="18dp" />

        <com.example.acespritech_umesh.umeshproject.customfonts.MyTextView
            android:id="@+id/detaildesignation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="designation"
            android:textAlignment="center"
            android:textSize="18dp" />

        <com.example.acespritech_umesh.umeshproject.customfonts.MyTextView
            android:id="@+id/detailsalary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="Salary"
            android:textAlignment="center"
            android:textSize="18dp" />

        <com.example.acespritech_umesh.umeshproject.customfonts.MyEditText
            android:id="@+id/updatename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Enter Name "
            android:textSize="15dp" />

        <Spinner
            android:id="@+id/updatedesignation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="15dp" />

        <com.example.acespritech_umesh.umeshproject.customfonts.MyEditText
            android:id="@+id/updatelsalary"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Enter Salary"
            android:textSize="15dp" />
    </LinearLayout>

</LinearLayout>